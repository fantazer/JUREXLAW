.main-service
	flex(between)
	fw()
	align-items stretch
	.main-service__el
		flex(between)
		fl()
		&:nth-child(1)
			.main-service_link
				background red
				color white
.main-service__head
	flex(mid)
	justify-content flex-start
	margin-bottom 20px
.main-service__el
	+below(768px)
		width 100%
		margin-bottom 10px
		flex(mid)
		fl()
	width 24%
	.icon:before
		margin-right 20px
		font-size 40px!important
		color red
	a
		width 100%
		text-align center
		display inline-block
		margin-top 30px
	
.main-service_title
	font-size 20px
	font-weight 700
.main-service_text
	+below(768px)
		text-align center
