.list-service__link
	display inline-block
	margin-bottom 8px
	padding-bottom 8px
	padding-left 20px 
	border-bottom 1px solid grey
	width 100%
	position relative
	color black
	&:before
		content '>'
		position absolute
		left 0px
		color red
	&:last-child 
		border-bottom 0px
	.title
		padding-left 20px
.list-service__el
	margin-bottom 20px
	padding 25px 25px 15px 25px
	border 1px solid grey
.list-service__toggle
	flex(between)
	background grey
	padding 10px 30px
	cp()
	.title
		margin-bottom 0
.list-service__wrap
	+below(768px)
		display none
		margin-bottom 30px